@model List<JMModels.PaymentType>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index_Layout.cshtml";
}


<table id="Listp"></table>
<table id="List"></table>


@*!--自动DataGrid 从第一次加载与重置窗体大小时候发生的事件:分部视图-->*@
<script type="text/javascript">
    $(function () {
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 10,
                height: $(window).height() - 35
            }).datagrid('resize', {
                width: $(window).width() - 10,
                height: $(window).height() - 35
            });
        });

    });
</script>

<script type="text/javascript">

    $(function () {
        $('#Listp').datagrid({
            url: '/PaymentType/GetListP',
            width: $(window).width() - 10,
            height: $(window).height() - 35,
            methord: 'post',
            fitColumns: true,
            sortable: true,
            sortName: 'PaymentTypeID',
            sortOrder: 'desc',
            idField: 'PaymentTypeID',
            pageSize: 15,
            pageList: [15, 20, 30, 40, 50],
            pagination: true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            rownumbers: true,//行号
            columns: [[
                //{ field: 'Id', title: 'Id', width: 60 },
                //{ field: 'Nmae', title: 'Nmae', width: 60 },
                { field: 'PaymentTypeID', title: 'PaymentTypeID', width: 60 },
                { field: 'Description', title: 'Description', width: 100 },
                { field: 'RequiresCreditCard', title: 'RequiresCreditCard', width: 100 }
            ]]
        });
    });


</script>


